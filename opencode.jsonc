{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "aspire": {
      "type": "local",
      "command": ["aspire", "mcp", "start"],
      "enabled": true
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"],
      "enabled": false
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"],
      "enabled": true
    }
  },
}